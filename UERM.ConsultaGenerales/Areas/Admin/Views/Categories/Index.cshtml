@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de Categorías</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-primary" style="float: right;"><i class="fas fa-plus"></i> Crear nueva categoría </a>
        </div>
    </div>


    <br />
    <br />

    <table id="tbCategories" class="table table-striped table-bordered" style="width: 100%;">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Orden</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>

</div>
@section Scripts{
    <script src="~/js/category.js"></script>
}
